@model PAWS_NDV_PetLovers.Models.Records.UserAccount
@{
    ViewData["Title"] = "User Account";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 mt-5">
            <div class="card">
                <div class="card-header">
                    User Account
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Account">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="email" class="control-label"></label>
                            <input name="email" type="email" class="form-control w-75" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="passWord" class="control-label"></label>
                            <input name="passWord" class="form-control  w-75" required>
                        </div>

                        <div class="form-group">
                            <label for="confirmpassWord" class="control-label">Confirm password</label>
                            <input name="confirmpassWord" class="form-control  w-75" required>
                        </div>

                        <div class="form-group mt-3">
                            <input type="submit" value="Save" class="btn btn-primary px-4" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>