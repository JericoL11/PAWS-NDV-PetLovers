@model PAWS_NDV_PetLovers.ViewModels.UserAccountVm
@{
    ViewData["Title"] = "Edit";
}

<div class="container">

    <!-- Header with Icon -->
    <div class="card-header bg-dark text-light text-center py-4 rounded-top">
        <h4 class="fw-bold mb-0">Edit Profile</h4>
    </div>

    <div class="card-body p-5 bg-light">
        <form method="post" asp-action="Edit">

       
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <!-- Profile Section -->
        <h5 class="card-title text-secondary mb-4 fw-semibold">Profile Details</h5>
        <div class="row">
            <div class="col-md-6 mb-4">
                <label asp-for="userAccount.fname" class="form-label text-muted">First Name</label>
                <input asp-for="userAccount.fname" class="form-control border-secondary" placeholder="Enter your first name" required />
            </div>
            <div class="col-md-6 mb-4">
                <label asp-for="userAccount.lname" class="form-label text-muted">Last Name</label>
                <input asp-for="userAccount.lname" class="form-control border-secondary" placeholder="Enter your last name" required />
            </div>
            <div class="col-md-6 mb-4">
                <label asp-for="userAccount.mname" class="form-label text-muted">Middle Name</label>
                <input asp-for="userAccount.mname" class="form-control border-secondary" placeholder="Enter your middle name"  />
            </div>
            <div class="col-md-6 mb-4">
                <label asp-for="userAccount.contact" class="form-label text-muted">Contact</label>
                <input asp-for="userAccount.contact" class="form-control border-secondary" placeholder="Enter your contact number" required />
            </div>
            <div class="col-md-6 mb-4">
                <label asp-for="userAccount.email" class="form-label text-muted">Email</label>
                <input asp-for="userAccount.email" type="email" class="form-control border-secondary" placeholder="Enter your email" />
            </div>
        </div>

        <div class="">
            <a asp-action="Profile" class="btn btn-secondary px-2">Cancel</a>
            <input type="submit" class="btn btn-primary  px-2" value="Save"/>
        </div>
        </form>

</div>