@model PAWS_NDV_PetLovers.ViewModels.UserAccountVm
@{
    ViewData["Title"] = "Account List VC";
}
<div class="container">
    <table class="table mt-4">
        <thead>
            <tr>
                <th>Account Id</th>
                <th>Username</th>
                <th>Date Created</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.IuserAccount.Count() > 0)
                {
                foreach (var acc in Model.IuserAccount)
                {
                
                    <tr>
                        <td>@acc.acc_Id</td>
                        <td>@acc.userName</td>
                        <td>@acc.dateCreated</td>

                        <td>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                    Reset
                            </button>
                        </td>

                    </tr>
             
                }
            
            }
             else
                {
                    <tr>
                        <td colspan="4" class="text-center">No findings</td>
                    </tr>
                }
        </tbody>
    </table>
</div


  @* Confirmation Modal *@
   
<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Understood</button>
      </div>
    </div>
  </div>
</div>