@model PAWS_NDV_PetLovers.ViewModels.UserAccountVm
@{
    ViewData["Title"] = "Create Staff";
}
        <div class="container p-3 d-flex justify-content-center">
            <div class="col-12 col-md-8">

                <form method="post" asp-action="CreateStaff" asp-controller="UserAccounts">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="card">

                        <div class="form-group" id="apppad">
                            <label asp-for="userAccount.fname" class="control-label"></label>
                            <input name="fname" class="form-control" />
                        </div>

                        <div class="form-group" id="apppad">
                            <label asp-for="userAccount.lname" class="control-label"></label>
                            <input name="lname" class="form-control" />
                        </div>

                        <div class="form-group text-end mt-4">
                            <input type="submit" value="Create" class="btn btn-confirm bt-lg px-4" />
                        </div>
                    </div>

                </form>



            </div>
        </div>

