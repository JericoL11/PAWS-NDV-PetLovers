@model PAWS_NDV_PetLovers.ViewModels.ReportsVm
@{
    ViewData["Title"] = "Product Managnement Report | Dashboard";
}
<div class="container p-0 bg container-bord">
    <div class="container p-0">
        <div class="container p-0  bg-custom-color">
            <div>
                <div class="container p-2">
                    <h1>Product Management Report</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-4">
    <ul class="nav">
        <li>
            <a role="presentation" asp-action="SwitchToTab" asp-route-tabName="stockAdjust" class="@(Model.activeProdMgmtTab == PAWS_NDV_PetLovers.ViewModels.ProdMgmtTab.stockAdjust ? "active" : string.Empty) btn btn-outline-success btn-booking">Stock Adjustment</a>
        </li>
        <li>
            <a role="presentation" asp-action="SwitchToTab" asp-route-tabName="stockLevel" class="@(Model.activeProdMgmtTab == PAWS_NDV_PetLovers.ViewModels.ProdMgmtTab.stockLevel ? "active" : string.Empty) btn btn-outline-success btn-booking">Stock Levels</a>
        </li>
        <li>
            <a role="presentation" asp-action="SwitchToTab" asp-route-tabName="transacSum" class="@(Model.activeProdMgmtTab == PAWS_NDV_PetLovers.ViewModels.ProdMgmtTab.transacSum ? "active" : string.Empty) btn btn-outline-success btn-booking">Transaction Summary</a>
        </li>
    </ul>
</div>

@switch (Model.activeProdMgmtTab)
{
    case PAWS_NDV_PetLovers.ViewModels.ProdMgmtTab.stockAdjust:
        @await Component.InvokeAsync("StockAdjustments")
        break;

    case PAWS_NDV_PetLovers.ViewModels.ProdMgmtTab.stockLevel:
        @await Component.InvokeAsync("StockLevels", new {vcm = Model})
        break;

    case PAWS_NDV_PetLovers.ViewModels.ProdMgmtTab.transacSum:
        @await Component.InvokeAsync("StockAdjustments")
        break;
}
