@model IEnumerable<PAWS_NDV_PetLovers.Models.Records.Product>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["SuccessMessage"] != null)
{
    //bootstrap not for modal
    <div id="success-alert" class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}




<div class="container p-0 bg container-bord shadow  mb-5 bg-white rounded">
    <div class="container p-0">

        <div class="container p-0  bg-custom-color text-center">
            <div>
                <div class="container p-2">
                    <h1 class="fw-bold">Product Dashboard</h1>
                </div>
            </div>
        </div>

               <div class="row justify-content-between p-3 pt-5">
                        <div class="col-3">
                            <a asp-action="StockAdjustment" class="btn btn-cancel btn-lg ">Stock Adjustments</a>
                        </div>
                        <div class="col-9 text-end">
                            <a asp-action="Index" asp-controller="Categories" class="btn btn-cancel btn-lg">View Category</a>
                            <a asp-action="Create" class="btn btn-confirm btn-lg ">Add Product</a>
                        </div>
               </div>
        
    
        <div class="card p-3">
            <div class="table-responsive">
                <table class="table table-bordered text-center hover" id="ProductTable">
                    <thead>
                        <tr>
                            <th class="text-center">@Html.DisplayNameFor(model => model.id)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.productName)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.CategoryId)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.sellingPrice)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.quantity)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.id)</td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.productName)</td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.category.categoryName)</td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.sellingPrice)</td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.quantity)</td>
                                <td>
                                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.id">Update</a> 
                                  @*  <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.id">Details</a> |
                                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id">Delete</a> *@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<script src="~/js/RecordsDataTables/ProductTable.js" defer></script>