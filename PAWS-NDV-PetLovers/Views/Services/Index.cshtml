@model IEnumerable<PAWS_NDV_PetLovers.Models.Records.Services>
@{
    ViewData["Title"] = "Index";
}

<div class="bg-secondary bg-opacity-10 py-2 mb-3">
    <div class="container"> 
        <h1>Services</h1>
    </div>
</div>

<div class="container">
    <div>
        <a class="btn btn-primary" asp-action="Create"> Add new Service</a>
    </div>
  
    <table class="table table-striped" id="ServicesTbl">
        <thead>
            <tr class="text-center">
                <th>Service ID</th>
                <th>Name</th>
                <th>Charge</th>
                <th>Settings</th>
            </tr>
        </thead>

        <tbody>
            @foreach ( var item in Model)
            {
                <tr class="text-center">
                    <td>@Html.DisplayFor(modelItem => item.serviceId)</td>
                    <td>@Html.DisplayFor(modelItem => item.serviceName)</td>
                    <td>@Html.DisplayFor(modelItem => item.serviceCharge)</td>
                    <td><a class="btn btn-success" asp-route-id="@item.serviceId" asp-action="Edit">Update</a> | 
                        <a class="btn btn-danger" asp-route-id="@item.serviceId" asp-action="Delete">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>

 </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}