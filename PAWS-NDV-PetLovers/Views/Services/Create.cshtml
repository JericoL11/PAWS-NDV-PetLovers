@model PAWS_NDV_PetLovers.Models.Records.Services
@{
    ViewData["Title"] = "Create";
}

<div class="container p-0 bg container-bord">
    <div class="container p-0">

        <div class="container p-0  bg-custom-color">
            <div>
                <div class="container p-2">
                    <h1>Add New Service</h1>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-6">

                <form method="post" asp-action="Create">
                    <div class="row">
                        <div class="card shadow-sm p-0">
                            <div class="card-header text-center fw-bold">
                               @* --header-- *@
                            </div>
                            <div class="card-body row px-5">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                                <div class="form-group col-lg-7">
                                    <label asp-for="serviceName" class="control-label"></label>
                                    <input asp-for="serviceName" class="form-control" />
                                    <span asp-validation-for="serviceName" class="text-danger"></span>
                                </div>

                                <div class="form-group col-lg-4 mt-4 mb-3">
                                    <input class="form-check-input" name="serviceType" asp-for="serviceType" type="checkbox">
                                    <label class="form-check-label" asp-for="serviceType"> </label>
                                </div>


                                <div class="form-group col-lg-7">
                                    <label asp-for="serviceCharge" class="control-label"></label>
                                    <input asp-for="serviceCharge" class="form-control decimal-input" />
                                    <span asp-validation-for="serviceCharge" class="text-danger"></span>
                                </div>


                                <div class="form-group col-lg-8 mt-4 mb-3">
                                    <input class="form-check-input" name="followUp" asp-for="followUp" type="checkbox">
                                    <label class="form-check-label" asp-for="followUp"> </label>
                                </div>

                                <div class="form-group  mt-3 mb-2">
                                    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                                    <input type="submit" value="Create" class="btn btn-primary" />
                              
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>