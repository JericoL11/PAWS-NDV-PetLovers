@model PAWS_NDV_PetLovers.Models.Appointments.Services
@{
    ViewData["Title"] = "Create";
}

<div class="bg-secondary bg-opacity-10 py-2 mb-3">
    <div class="container">
        <h1>Add New Service</h1>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">

            <form method="post" asp-action="Create">
                <div class="row">
                    <div class="card shadow-sm p-0">
                        <div class="card-header text-center fw-bold">
                           
                        </div>
                        <div class="card-body p-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="serviceName" class="control-label"></label>
                                <input asp-for="serviceName" class="form-control" />
                                <span asp-validation-for="serviceName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="serviceCharge" class="control-label"></label>
                                <input asp-for="serviceCharge" class="form-control decimal-input" />
                                <span asp-validation-for="serviceCharge" class="text-danger"></span>
                            </div>

                            <div class="form-group text-end mt-3 mb-2">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>