@{
    Layout = "_Login.cshtml";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card w-100" style="max-width: 800px; border-radius: 20px; overflow: hidden;">
        <div class="row g-0">

            <div class="col-12 col-md-5 d-flex align-items-center justify-content-center  text-white">
                <img src="~/Images/logologin.png" alt="Logo" class="img-fluid" style="max-width: 280px; height: auto;">
            </div>

            <div class="col-12 col-md-7 bg-logcard ">
                <div class="card-body border-0">
                    <div class="p-4">
                        <h2 class="card-title fw-bold mb-4">Login</h2>

                        <form asp-action="Login" method="post" asp-controller="Logins">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            @* Float version of Inputs *@
                            <!-- Username Input -->
                           @*  <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="Username" name="userName" placeholder="Username">
                                <label for="Username">Username</label>
                            </div> *@

                            <!-- Password Input with Toggle Icon -->

                      @*       <div class="form-floating mb-3 position-relative">
                                <input type="password" class="form-control password-field" name="passWord" placeholder="Password">
                                <label for="Password">Password</label>
                                <span class="position-absolute top-50 end-0 translate-middle-y me-3 toggle-password-icon" style="cursor: pointer;">
                                    <i class="fas fa-eye togglePasswordIcon"></i>
                                </span>
                            </div> *@

                            <!-- Username Input -->
                             <div class="form-group mb-3">
                                <label for="Username" class="control-label">Username</label>
                                <input type="text" class="form-control" id="Username" name="userName" placeholder="required">
                            </div>

                            <!-- Password Input with Toggle Icon -->
                             <div class="form-group mb-3 position-relative">
                                <label for="Password" class="control-label">Password</label>
                                <input type="password" class="form-control password-field" name="passWord" placeholder="required">
                                <span class="position-absolute top-50 end-0 translate-middle-y me-3 toggle-password-icon" style="cursor: pointer;">
                                <i class="fas fa-eye togglePasswordIcon"></i>
                                </span>
                            </div>

                            <!-- Forgot Password Link -->
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <a href="@Url.Action("ForgotPassword", "Logins")" class="text-primary">Forgot Password?</a>
                            </div>

                            <!-- Login Button -->
                            <button type="submit" class="btn btn-success w-100">Login</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
