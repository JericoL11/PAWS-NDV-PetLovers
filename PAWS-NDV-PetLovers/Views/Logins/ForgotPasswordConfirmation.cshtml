@{
    ViewData["Title"] = "Password Reset Sent";
    Layout = "_Login.cshtml";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card w-100" style="max-width: 500px; border-radius: 20px;">
        <div class="card-body p-4 text-center">
            <h2 class="card-title mb-4">Check Your Email</h2>
            <p>An email with a password reset code has been sent to your email address. Please check your inbox and follow the instructions.</p>
            <a href="@Url.Action("EnterResetCode", "Logins")" class="btn btn-primary mt-3">Proceed to enter code</a>
        </div>
    </div>
</div>
