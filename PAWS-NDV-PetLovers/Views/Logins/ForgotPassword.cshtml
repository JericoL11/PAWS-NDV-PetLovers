@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Login.cshtml";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card w-100" style="max-width: 500px; border-radius: 20px;">
        <div class="card-body p-4">
            <h2 class="card-title mb-4">Forgot Password</h2>
            <p>Please enter your email address. A reset code will be sent to your email.</p>

            <form asp-action="ForgotPassword" method="post" asp-controller="Logins">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="Email" name="email" placeholder="name@example.com" required>
                    <label for="Email">Email address</label>
                </div>

                <button type="submit" class="btn btn-primary w-100">Send Reset Code</button>
                <div class="mt-2 text-center">
                    <a asp-action="Login" class="text-primary text-decoration-none">Back to login</a>
                </div>
             
            </form>
        </div>
    </div>
</div>