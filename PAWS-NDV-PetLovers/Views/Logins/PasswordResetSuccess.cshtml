@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = "_Login.cshtml";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card w-100" style="max-width: 500px; border-radius: 20px;">
        <div class="card-body p-4 text-center">
            <h2 class="card-title mb-4">Password Reset Successful</h2>
            <p>Your password has been reset successfully. You can now log in with your new password.</p>
            <a href="@Url.Action("Login", "Logins")" class="btn btn-primary mt-3">Return to Login</a>
        </div>
    </div>
</div>
