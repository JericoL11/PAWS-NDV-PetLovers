@model PAWS_NDV_PetLovers.Models.Records.Category
@{
    ViewData["Title"] = "Delete";
}

<div class="container p-0 bg container-bord">
    <div class="container p-0">

        <div class="container p-0  bg-custom-color">
            <div>
                <div class="container p-2">
                    <h1>Delete</h1>
                </div>
            </div>
        </div>
        <h3>Are you sure you want to delete this category?</h3>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                   <p style="margin:0;">Category Id</p>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.id)
                </dd>
                  <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.categoryName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.categoryName)
                </dd>
                  <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.registeredDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.registeredDate)
                </dd>
             </dl>
        </div>

        @* form for delete *@

        <form asp-action="Delete">
            <input type="hidden" asp-for="id" />
            <input type="submit" value="Delete" class="btn btn-danger px-4" /> 
            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a> 
        </form>

    </div>
</div>
