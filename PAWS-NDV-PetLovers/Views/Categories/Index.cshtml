@model IEnumerable<PAWS_NDV_PetLovers.Models.Records.Category>
@{

}<!-- Alert Placeholder -->
@if (TempData["SuccessMessage"] != null)
{
    //bootstrap not for modal
    <div id="success-alert" class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container p-0 bg container-bord">
    <div class="container p-0">

        <div class="container p-0  bg-custom-color">
            <div>
                <div class="container p-2">
                    <h1>Category Dashboard</h1>
                </div>
            </div>
        </div>

        <div class="form-group p-3 text-end">
            <a asp-action="Index" asp-controller="products" class="btn btn-primary btn-cancel">View Products</a>
            <a asp-action="Create" class="btn btn-primary btn-confirm me-2">Add Category</a>
        </div>

        <div class="card p-3">
            <div class="table-responsive">
                <table class="table table table-bordered text-center hover" id="CategoryTable">
                    <thead>
                    <tr >
                        <th class="text-center">@Html.DisplayNameFor(model => model.id)</th>
                        <th class="text-center">@Html.DisplayNameFor(model => model.categoryName)</th>
                        <th class="text-center">@Html.DisplayNameFor(model => model.description)</th>
                        <th class="text-center">@Html.DisplayNameFor(model => model.registeredDate)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@Html.DisplayFor(m => item.id)</td>
                            <td class="text-center">@Html.DisplayFor(m => item.categoryName)</td>
                            <td class="text-center">@Html.DisplayFor(m => item.description)</td>
                            <td class="text-center">@Html.DisplayFor(m => item.registeredDate)</td>
                            <td><a class="btn btn-success" asp-action="Edit" asp-route-id="@item.id">Update</a> 
                                @* <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.id">Details</a> *@
                            @*  <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id" >Delete</a> *@
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>
<script src="~/js/RecordsDataTables/CategoryTable.js" defer></script>