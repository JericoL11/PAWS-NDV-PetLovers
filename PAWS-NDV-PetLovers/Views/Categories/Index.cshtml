@model IEnumerable<PAWS_NDV_PetLovers.Models.Records.Category>
@{
}
<div class="bg-secondary bg-opacity-10 py-2 mb-3">
    <div class="container">
        <h1>Category</h1>
    </div>
</div>

<div class="container">
  <a class="btn btn-primary px-3 mb-3" asp-action="Create">Add Category</a>
    <table class="table table-striped" id="CategoryTable">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.categoryName)</th>
            <th>@Html.DisplayNameFor(model => model.description)</th>
            <th>@Html.DisplayNameFor(model => model.registeredDate)</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.categoryName)</td>
                <td>@Html.DisplayFor(m => item.description)</td>
                <td>@Html.DisplayFor(m => item.registeredDate)</td>
                <td><a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Update</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id" >Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>
<script src="~/js/RecordsDataTables/CategoryTable.js" defer></script>