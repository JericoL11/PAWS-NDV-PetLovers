@model PAWS_NDV_PetLovers.ViewModels.TransactionsVm
@{
    ViewData["Title"] = "Diagnosis";
}<div class="bg-custom-color py-5">
    <div class="container">
        <h1 class="display-5 text-white">Diagnosis</h1>
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-end">
        <div class="col-6">
            <!-- Search Form -->
            <form id="searchForm" method="get" asp-action="Diagnosis" class="input-group mb-3">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search owner name..." />
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Search
                </button>
            </form>
        </div>
    </div>
  
    <!-- Search Results -->
    <div id="results">
        @if (Model.IOwner?.Any() == true)
        {
            <div class="table-responsive">
                <table class="table table-hover table-bordered mt-3">
                    <thead>
                        <tr>
                            <th>Owner Id</th>
                            <th>Owner Name</th>
                            <th>Home Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var owner in Model.IOwner)
                        {
                            <tr>
                                @{
                                    var fullname = $"{owner.fname} {owner.lname}";
                                }
                                <td>@owner.id</td>
                                <td>@fullname</td>
                                <td>@owner.address</td>
                                <td>
                                    <a asp-action="CreateDiagnosis" asp-route-id="@owner.id" class="btn btn-sm btn-primary">
                                        <i class="bi bi-pencil-square"></i> Select
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="row justify-content-center mt-5">
                <div class="col-12 text-center">
                    <p class="text-muted">No results found</p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#searchForm').submit(function (event) {
                event.preventDefault();
                var searchTerm = $('input[name="searchTerm"]').val();

                $.get('/Billing/Diagnosis', { searchTerm: searchTerm }, function (data) {
                    $('#results').html($(data).find('#results').html());
                });
            });
        });
    </script>
}