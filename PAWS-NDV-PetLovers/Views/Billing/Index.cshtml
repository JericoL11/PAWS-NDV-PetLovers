@model PAWS_NDV_PetLovers.ViewModels.TransactionsVm
@{
    ViewData["Title"] = "Billing Dashboard -> INVOICE DASHBOARD";
}

<div class="container-fluid bg p-0 container-bord">
    <div class="container p-0">

        <div class="container p-0 bg-custom-color sticky-header">
            <div>
                <div class="container p-2">
                    <h1>Invoice Dashboard</h1>
                </div>
            </div>
        </div>



        <ul class="nav nab-bar">
            <li >
                <a role="presentation" asp-action="SwitchToDboardTab" asp-route-tabName="DBoard_Diagnostics" asp-controller="Billing" class="@(Model.activeBoardTab == PAWS_NDV_PetLovers.ViewModels.DBoardTab.DBoard_Diagnostics ? "active" : string.Empty) btn btn-outline-primary">Diagnostics</a>
            </li>
         
            <li>
                <a role="presentation" asp-action="SwitchToDboardTab" asp-route-tabName="DBoard_Purchase" asp-controller="Billing" class="@(Model.activeBoardTab == PAWS_NDV_PetLovers.ViewModels.DBoardTab.DBoard_Purchase ? "active" : string.Empty) btn btn-outline-primary">Purchases</a>

            </li>
  
     
        </ul>


        @switch (Model.activeBoardTab)
        {
            case PAWS_NDV_PetLovers.ViewModels.DBoardTab.DBoard_Diagnostics:
                @await Component.InvokeAsync("DBoard_Diagnostics")  //name of the component Folder
            break;

            case PAWS_NDV_PetLovers.ViewModels.DBoardTab.DBoard_Purchase:
                @await Component.InvokeAsync("DBoard_Purchase")
            break;

            default:
                @await Component.InvokeAsync("DBoard_Diagnostics")
            break;
        }

    
    </div>
</div>


